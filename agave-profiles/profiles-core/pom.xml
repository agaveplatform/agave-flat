<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.agaveplatform</groupId>
		<artifactId>profiles</artifactId>
		<version>2.2.24</version>
	</parent>
	<artifactId>profiles-core</artifactId>
	<name>Agave Platform Profile Service Core</name>
	<description>Core classes for the Agave Profile Services</description>
	<packaging>jar</packaging>

	<properties>
		<force.check.update>false</force.check.update>
		<suite.testng>testng.xml</suite.testng>
	</properties>

	<build>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<filtering>true</filtering>
				<directory>src/test/resources</directory>
			</testResource>
		</testResources>
		<plugins>
			<!-- Attach testng to the surefire test execution -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<suiteXmlFiles>
						<suiteXmlFile>src/test/resources/testng.xml</suiteXmlFile>
					</suiteXmlFiles>
				</configuration>
			</plugin>
			<!-- Attach testng to the failsafe integration-test execution -->
			<plugin>
				<groupId>com.dkanejs.maven.plugins</groupId>
				<artifactId>docker-compose-maven-plugin</artifactId>
				<version>${docker-compose-maven-plugin.version}</version>
				<configuration>
					<detachedMode>true</detachedMode>
					<projectName>${project.artifactId}</projectName>
					<composeFiles>
						<composeFile>${project.basedir}/../../compose/third-party/docker-compose.yml</composeFile>
					</composeFiles>
					<ignorePullFailures>true</ignorePullFailures>
				</configuration>
				<executions>
					<execution>
						<id>${project.artifactId}up</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>up</goal>
						</goals>
					</execution>
					<execution>
						<id>${project.artifactId}down</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>down</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>${maven-antrun-plugin.version}</version>
				<executions>
					<execution>
						<id>${project.artifactId}-sleep-for-mysql</id>
						<phase>pre-integration-test</phase>
						<configuration>
							<target>
								<sleep seconds="5" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>com.github.slem1</groupId>
				<artifactId>await-maven-plugin</artifactId>
				<version>${await-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>${project.artifactId}-await-tcp-connection</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>Await</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<poll>
						<attempts>10</attempts>
						<sleep>5000</sleep>
					</poll>
					<tcpConnections>
						<tcpConnection>
							<host>mysql</host>
							<port>3306</port>
						</tcpConnection>
					</tcpConnections>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>${maven-failsafe-plugin.version}</version>
				<executions>
					<execution>
						<id>${project.artifactId}-integration-tests</id>
						<phase>integration-test</phase>
						<goals>
							<goal>integration-test</goal>
						</goals>
						<configuration>
							<excludedGroups>broken,notReady</excludedGroups>
							<systemPropertyVariables>
								<log4j.configuration>file:${basedir}/src/test/resources/log4j.properties
								</log4j.configuration>
							</systemPropertyVariables>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>${json.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.el</groupId>
			<artifactId>el-api</artifactId>
			<version>${el-api.version}</version>
			<scope>provided</scope>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>notifications-core</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>compile</scope>
		</dependency>
	</dependencies>
</project>
