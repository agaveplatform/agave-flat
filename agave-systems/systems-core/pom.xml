								</log4j.configuration>
							</systemPropertyVariables>
						</configuration>
					</execution>

					<execution>
						<id>${project.artifactId}-integration-sftp</id>
						<phase>integration-test</phase>
						<goals>
							<goal>integration-test</goal>
						</goals>
						<configuration>
							<skipTests>${skip.integration.sftp.tests}</skipTests>
