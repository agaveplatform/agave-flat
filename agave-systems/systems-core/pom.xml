<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.agaveplatform</groupId>
		<artifactId>systems</artifactId>
		<version>2.2.24</version>
	</parent>
	<artifactId>systems-core</artifactId>
	<name>Agave Platform Systems Service Core</name>
	<description>Core classes for Agave Systems service</description>
	<packaging>jar</packaging>

	<properties>
		<force.check.update>false</force.check.update>
		<suite.testng>testng.xml</suite.testng>
	</properties>

	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>com.dkanejs.maven.plugins</groupId>
				<artifactId>docker-compose-maven-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<detachedMode>true</detachedMode>
					<projectName>${project.artifactId}</projectName>
					<composeFiles>
						<composeFile>${project.basedir}/src/test/resources/docker-compose.yml</composeFile>
						<composeFile>${project.basedir}/../../compose/third-party/docker-compose.yml</composeFile>
					</composeFiles>
					<ignorePullFailures>true</ignorePullFailures>
				</configuration>
				<executions>
					<execution>
						<id>systemsup</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>up</goal>
						</goals>
					</execution>
					<execution>
						<id>systemsdown</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>down</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-failsafe-plugin</artifactId>
				<version>${maven-failsafe-plugin.version}</version>
				<executions>
					<execution>
						<id>systems-core-integration-tests</id>
						<phase>integration-test</phase>
						<goals>
							<goal>integration-test</goal>
						</goals>
						<configuration>
							<includes>
								<include>org.iplantc.service.transfer.sftp.SftpPasswordRemoteDataClientTest</include>
								<include>org.iplantc.service.transfer.sftp.SftpPathResolutionTests</include>
								<include>org.iplantc.service.transfer.sftp.SftpPathSanitizationTest</include>
								<include>org.iplantc.service.transfer.sftp.SftpSshKeysRemoteDataClientTest</include>
							</includes>
							<groups>integration,s3</groups>
							<excludedGroups>broken,notReady,unit,azure,s3,gridftp</excludedGroups>
							<systemPropertyVariables>
								<log4j.configuration>file:${basedir}/src/test/resources/log4j.properties
								</log4j.configuration>
							</systemPropertyVariables>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

